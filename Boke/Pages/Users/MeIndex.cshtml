@page
@model Boke.MeIndexModel
@{
    ViewData["Title"] = "个人主页";
}

<h2>@Model.user.Name 的个人主页</h2>
<style>
    .col-8 {
        padding-left: 0;
        float: left;
    }

    .col-4 {
        float: left;
        text-align: center;
    }

    .table td {
        padding-left: 0;
    }

        .table td p {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }
</style>
<div class="col-8">
    <table class="table" style=" table-layout:fixed;word-break:break-all">
        <tbody>
            @foreach (var item in Model.article)
            {
                <tr>
                    <td>
                        <a asp-page="./Articles/Details" asp-route-id="@item.ID">
                            <h4>
                                @item.Tittle

                            </h4>
                        </a>
                        <time style="padding-right:50px">@item.CreateTime</time>
                        <a class="small" asp-page="./Details" asp-route-id="@item.ID">@item.Author.Name </a><br>
                        <p>@Html.Raw(item.Content)</p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-4">
    <h4>推荐阅读</h4>
</div>
